{
  "blocks": [
    {% for post in site.tags.block_01 %}
      { 
        "kop":          "{{ post.kop }}",
        "foto_bestand": "{{ post.foto_bestand }}",
        "foto_alt":     "{{ post.foto_alt }}",
        "tekst":        "{{ post.tekst }}",
        "url":          "{{ post.url }}",
        "content":      "{{ post.content | replace: '"', "'" | strip_newlines }}"    
      } {% unless forloop.last %},{% endunless%}
    {% endfor %}
  ]
}
